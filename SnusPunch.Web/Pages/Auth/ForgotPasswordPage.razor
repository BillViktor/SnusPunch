@page "/ForgotPassword"
@layout EmptyLayout

<PageTitle>SnusPunch - Återställ Lösenord</PageTitle>

<MessageComponent Errors="AuthViewModel.Errors" SuccessMessages="AuthViewModel.SuccessMessages" IsBusy="AuthViewModel.IsBusy" />

<div class="center box">
    <h2>Återställ Lösenord</h2>

    <EditForm Model="mForgotPasswordRequestModel" OnValidSubmit="ForgotPassword">
        <DataAnnotationsValidator />

        <p>
            <ValidationSummary />
        </p>

        <p>
            <label for="email">E-post</label>
            <input @bind="mForgotPasswordRequestModel.Email" id="email" class="full-width" />
        </p>

        <button class="full-width" type="submit">Återställ Lösenord</button>
    </EditForm>

    <p class="text-center">
        Kommer du ihåg ditt lösenord? <a href="login">Logga in här!</a>
    </p>
</div>